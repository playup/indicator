#!/bin/bash
### BEGIN INIT INFO
# Provides:          jenkins_build_light
# Required-Start:    $indicatord
# Required-Stop:     $indicatord
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start daemon at boot time
# Description:       Enable service provided by daemon.
### END INIT INFO

DAEMON=/usr/local/bin/jenkins_light
NAME=jenkins_build_light
DESC="Jenkins build light"

export DEVICE_NUMBER=0
export JENKINS_VIEW="build_light"


set -e

source /usr/local/rvm/scripts/rvm

case "$1" in
    start)
        echo -n "Starting $DESC: " 
        start-stop-daemon --start --pidfile /var/run/$NAME.pid --make-pidfile --background --startas $DAEMON -- $CONFIGFILE
        echo "$NAME."
        ;;
    stop)
        echo -n "Stopping $DESC: "
        start-stop-daemon --stop --oknodo --quiet --pidfile /var/run/$NAME.pid
        rm -f /var/run/$NAME.pid
        echo "$NAME."
        ;;
    *)
        echo "Usage: $0 { start | stop }" >&2
        exit 1
        ;;
esac

exit 0
